:host
    display: block;
    position: fixed;
    background-color: #FDFFFC; // #A52626, #19335B, #235789, #F1D302
    height: 60px;
    width:100%;
    z-index: 1;
    box-shadow: rgba(35,87,137,0.11) 0 1px;

    & > *
        vertical-align: middle;
        padding: 0 10px 0 10px;

    &:before
        content: '';
        display: inline-block;
        vertical-align: middle;
        height: 100%;

img.logo
    display: inline-block;
    height: 95%;
    //padding-left: 10px

::ng-deep
    input.ui-inputtext  
        height: 100%;

    button.ui-button
        background-color: #19335B;

    button.ui-button:hover
        background-color: #235789 !important;
